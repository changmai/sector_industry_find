@echo off
chcp 65001 >nul
REM ================================================================================
REM   [시뮬레이션 04] 기술적 신호 조합 (MACD + RSI)
REM ================================================================================
REM
REM   전략 논리:
REM   --------------------------------------------------------------------------
REM   - GT_A: MACD 골든크로스 (MACD선이 시그널선 상향 돌파)
REM   - GT_B: RSI 매수 신호 (과매도 탈출 OR 2일 연속 상승)
REM   - GT_C: RSI 과매수 아님 (RSI < 70)
REM
REM   투자 아이디어:
REM   --------------------------------------------------------------------------
REM   MACD 골든크로스 + RSI 매수 신호 동시 발생 = 강한 상승 신호.
REM   RSI 70 이하 필터로 과매수 구간 진입 방지.
REM
REM   필수 조건 + 선택 조건:
REM   --------------------------------------------------------------------------
REM   - 필수: GT_A AND GT_B (MACD 골든크로스 + RSI 매수신호)
REM   - 선택: GT_C, GT_D, GT_E 중 0~2개 추가
REM
REM   TP/SL 설정:
REM   --------------------------------------------------------------------------
REM   - 익절: +10%
REM   - 손절: -5%
REM   - 최대 보유: 14일
REM
REM   예상 거래 빈도: 높음 (기술적 지표만 사용)
REM ================================================================================

cd /d "%~dp0.."

python combination_tester.py ^
    --required GT_A,GT_B ^
    --conditions GT_C,GT_D,GT_E ^
    --start-date 20240101 ^
    --end-date 20241231 ^
    --tp 10 ^
    --sl -5 ^
    --max-holding 14 ^
    --min-trades 100 ^
    --min-size 0 ^
    --max-size 2 ^
    --log

pause
